<body id="body">

<!-- Header Start -->
{% include 'menu.html.twig' %}

<section class="page-title bg-2">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block">
          <h1>Blog Full Width</h1>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Blanditiis, ex!</p>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="page-wrapper">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-10">
{% for article in articles %}
				<div class="post">
          <div class="post-media post-thumb">
            <a href="blog-single.html">
              <img src="{{asset("images/blog/blog-post-1.jpg")}}" alt="">
            </a>
          </div>
        <h3 class="post-title"><a href="blog-single.html">{{article.titre}}</a></h3>
        <div class="post-meta">
          <ul>
          <li>
            <i class="ion-calendar"></i> {{ article.date|date("m/d/Y") }}
          </li>
          <li>
            <i class="ion-android-people"></i> {{article.utilisateur}}
          </li>
          <li>
            <a href="blog-grid.html"><i class="ion-pricetags"></i>{{article.categorie}}</a>
          </li>
          </ul>
        </div>
        <div class="post-content">
        <p>{{article.contenu | raw}}</p>
        <a href="{{ path('app_article_show', {'id':article.id})}}" class="btn btn-main">read me</a>
        {% if is_granted('EDIT', article) %}
          <a href="{{ path('app_article_edit', {'id':article.id})}}" class="btn btn-main">edit</a>
        {% endif %}
  </div>
</div>
{% endfor %}

<nav aria-label="Page navigation example">
  <ul class="pagination post-pagination">
    <li class="page-item"><a class="page-link" href="blog-grid.html">Prev</a></li>
    <li class="page-item"><a class="page-link" href="blog-grid.html">1</a></li>
    <li class="page-item"><a class="page-link" href="blog-grid.html">2</a></li>
    <li class="page-item"><a class="page-link" href="blog-grid.html">3</a></li>
    <li class="page-item"><a class="page-link" href="blog-grid.html">Next</a></li>
  </ul>
</nav>
			</div>
		</div>
	</div>
</div>

